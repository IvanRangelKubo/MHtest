{% if section.blocks != blank %}

<div class="secccategorias">
  <div class="custom-container">

    <div class="titlecontainer">
      <h2 class="secctitle">{{ section.settings.title }}</h2>
    </div>

    <div class="carruselhtml w-embed">
      <div class="owl-carousel marcasbrandowl owl-theme" id="sync2">

        {% for block in section.blocks %}
        <a href="{{ block.settings.url }}" class="catelink linea w-inline-block">
          <img src="{{ block.settings.image |  image_url }}" alt="{{ block.settings.image.alt }}"
            class="imgiconslider brand">
        </a>
        {% endfor %}

      </div>
    </div>

  </div>
</div>

{% else %}

<div class="secccategorias">
  <div class="custom-container">

    <div class="titlecontainer">
      <h2 class="secctitle">COMPRA POR LÍNEA</h2>
    </div>

    <div class="carruselhtml w-embed">
      <div class="owl-carousel marcasbrandowl owl-theme">
        <a href="#" class="catelink linea w-inline-block"><img src="{{ " logo_brand_classic.png" | asset_url }}"
            class="imgiconslider brand"></a>
        <a href="#" class="catelink linea w-inline-block"><img src="{{ " logo_collection-copy-3.png" | asset_url }}"
            class="imgiconslider brand"></a>
        <a href="#" class="catelink linea w-inline-block"><img src="{{ " logo_brand_boys.png" | asset_url }}"
            class="imgiconslider brand"></a>
        <a href="#" class="catelink linea w-inline-block"><img src="{{ " logo_brand_baby_boys.png" | asset_url }}"
            class="imgiconslider brand"></a>
        <a href="#" class="catelink linea w-inline-block"><img src="{{ " logo_collection.png" | asset_url }}"
            class="imgiconslider brand"></a>
        <a href="#" class="catelink linea w-inline-block"><img src="{{ " logo_Sansabelt_brand.png" | asset_url }}"
            class="imgiconslider brand"></a>
      </div>
    </div>

  </div>
</div>

{% endif %}



{% schema %}
{
"name": "Colecciones con Imagen",
"enabled_on": {
"templates": ["index"]
},
"settings": [
{
"type": "text",
"id": "title",
"label": "Titulo de seccion",
"default": "COMPRA POR LÍNEA"
}
],
"max_blocks": 10,
"blocks": [
{
"type": "image",
"name": "Coleccion",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Imagen de la coleccion"
},
{
"type": "url",
"id": "url",
"label": "URL de la coleccion"
}
]
}
],
"presets": [
{
"name": "Colecciones con Imagen"
}
]
}
{% endschema %}