<div class="custom-container">   
  <div class="containermicuenta">

    <div class="titlecontainer">
      <h1 class="secctitle red">MI CUENTA</h1>
      <div class="linetitle"></div>
    </div>

    <div id="w-node-_8fd43ef2-9b5d-13ae-be20-0f2cc4250f5f-bfeb76ed" class="w-layout-layout cuentastack wf-layout-layout">

      <div class="w-layout-cell bordercell " id="forget_pass_them">
        <div class="loginpopform w-form"> 

          {%- form 'recover_customer_password', class: 'contenidoformlog' -%}

          <h3 class="titles-micuenta">Recuperar contraseña</h3>
          <p class="txtlogin pagina">{{ 'customer.recover_password.subtext' | t }}</p>
            {% assign recover_success = form.posted_successfully? %} 
            <input type="email" class="loginreg-field mail border w-input" value="" name="email" id="RecoverEmail" autocorrect="off" autocapitalize="off" placeholder="Correo electrónico" autocomplete="email" {% if form.errors %} aria-invalid="true" aria-describedby="RecoverEmail-email-error" autofocus {% endif %} required="">
            {%- if form.errors -%}
              <small id="RecoverEmail-email-error" class="form__message">
                <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                  <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2" />
                  <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7" />
                  <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white" />
                  <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                </svg>
                {{ form.errors.messages['form'] }}
              </small> {%- endif -%} <input type="submit" value="Enviar" data-wait="" class="loginpopbtn w-button">
            <a href="#" class="frgtpassword" style="color: black; width: inherit;">Cancelar</a> 
          {%- endform -%}
        </div>
      </div>

      <div id="login_them" class="w-layout-cell bordercell visible">
        <div class="loginpopform w-form">

          {% form 'customer_login', class: 'contenidoformlog', return_to: routes.account_url %}
            <h2 class="titles-micuenta">Iniciar sesión</h2>
            <p class="txtlogin pagina">Escribe tu usuario y contraseña para acceder a tu cuenta</p>
            <input class="loginreg-field mail border w-input" placeholder="Correo electrónico*" maxlength="256" name="customer[email]" autocomplete="email" autocorrect="off" autocapitalize="off" type="email" required="" {% if form.errors contains 'form' %} aria-invalid="true" {% endif %} >
            <input class="loginreg-field pass border w-input" placeholder="Contraseña*" maxlength="256" name="customer[password]" autocomplete="current-password" type="password" required="" {% if form.errors contains 'form' %} aria-invalid="true" {% endif %} >
            <div class="labelcheck-tyc pagina">*campos requeridos</div>
            <input type="submit" data-wait="" class="loginpopbtn w-button" value="Registrarme">
            <a href="#" class="frgtpassword labelcheck-tyc pagina" style="width: inherit;">Olvidé mi contraseña</a>
            {%- if form.errors -%}
              <div class="form-error-customer">
                <h2 class="form__message error" tabindex="-1" autofocus>
                  <span class="visually-hidden">{{ 'accessibility.error' | t }}
                  </span>
                  <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                    <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2" />
                    <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7" />
                    <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white" />
                    <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                  </svg>
                  {{ 'templates.contact.form.error_heading' | t }}
                </h2>
                {{ form.errors | default_errors }}
              </div> 
            {%- endif -%} 

            {%- if recover_success == true -%} 
              <h3 class="form__message recover-success" tabindex="-1" autofocus>
                <svg aria-hidden="true" focusable="false" role="presentation" viewBox="0 0 13 13">
                  <path d="M6.5 12.35C9.73087 12.35 12.35 9.73086 12.35 6.5C12.35 3.26913 9.73087 0.65 6.5 0.65C3.26913 0.65 0.65 3.26913 0.65 6.5C0.65 9.73086 3.26913 12.35 6.5 12.35Z" fill="#428445" stroke="white" stroke-width="0.7" />
                  <path d="M5.53271 8.66357L9.25213 4.68197" stroke="white" />
                  <path d="M4.10645 6.7688L6.13766 8.62553" stroke="white">
                </svg>
                {{ 'customer.recover_password.success' | t }}
              </h3> 
            {%- endif -%}

          {% endform %}

        </div>
      </div>

      <div id="w-node-_8fd43ef2-9b5d-13ae-be20-0f2cc4250f61-bfeb76ed" class="w-layout-cell">
        <div class="loginpopform w-form">

          {% form 'create_customer', class: 'contenidoformlog', return_to: routes.account_url %}

            <h3 class="titles-micuenta">Registrarme</h3>
            <p class="txtlogin pagina">Regístrate y obtén descuentos y promociones especiales</p>
            <input class="loginreg-field border w-input" placeholder="Nombre (s)*" maxlength="256" name="customer[first_name]" type="text" required="">
            <input class="loginreg-field border w-input" placeholder="Apellido*" maxlength="256" name="customer[last_name]" type="text" required="">
            <input class="loginreg-field mail border w-input" placeholder="Correo electrónico*" maxlength="256" name="customer[email]" type="email" required="" {% if form.errors contains 'email' %} aria-invalid="true" aria-describedby="RegisterForm-email-error" {% endif %}>
              {%- if form.errors contains 'email' -%}
                <span id="RegisterForm-email-error" class="form__message">
                  {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.
                </span>
              {%- endif -%}
            <input class="loginreg-field pass border w-input" placeholder="Contraseña*" maxlength="256" name="customer[password]" type="password" required="" {% if form.errors contains 'password' %} aria-invalid="true" aria-describedby="RegisterForm-password-error" {% endif %}>
              {%- if form.errors contains 'password' -%}
                <span id="RegisterForm-password-error" class="form__message">
                  {{ form.errors.translated_fields['password'] | capitalize }} {{ form.errors.messages['password'] }}.
                </span>
              {%- endif -%}
            <div class="labelcheck-tyc pagina">*Campos requeridos</div>
            <input type="submit" data-wait="" class="loginpopbtn w-button" value="Crear cuenta">
            
            <label class="w-checkbox accept-tyc left">
              <div class="w-checkbox-input w-checkbox-input--inputType-custom logincheck dark"></div>
              <input type="checkbox" name="checkbox-2" id="checkbox-2" data-name="Checkbox 2" required="" style="opacity:0;position:absolute;z-index:-1" oninvalid="this.setCustomValidity('Marque esta casilla si desea continuar')">
              <span class="w-form-label" for="checkbox-2">
                <a href="/pages/terminos-y-condiciones" class="labelcheck-tyc pagina">Acepto el Aviso de Privacidad</a>
              </span>
            </label>
                
          {% endform %}

        </div>
      </div>

    </div>
    
  </div>
</div>

<script>
  $('.frgtpassword').click(function(evt) {
    console.log('click');
    var recover = document.getElementById("forget_pass_them");
    recover.classList.toggle("visible");
    var login = document.getElementById("login_them");
    login.classList.toggle("visible");
  });
</script> 

{%- if shop.checkout.guest_login -%} 
  <div>
    <hr>
    <h2>{{ 'customer.login_page.guest_title' | t }}</h2>

    {%- form 'guest_login' -%} <button>
      {{ 'customer.login_page.guest_continue' | t }}
    </button> {%- endform -%}
  </div> 
{%- endif -%}


