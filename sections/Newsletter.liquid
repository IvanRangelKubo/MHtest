<div class="secc-news">
  <div class="custom-container">
    <div id="w-node-_135b385e-d8f5-74c6-2f6e-7fc89557b439-9557b436" class="w-layout-layout stacknews wf-layout-layout">

      <div id="w-node-_135b385e-d8f5-74c6-2f6e-7fc89557b43a-9557b436" class="w-layout-cell cellinfonews">
        <div id="w-node-_135b385e-d8f5-74c6-2f6e-7fc89557b43b-9557b436"
          class="w-layout-layout stackinfonews wf-layout-layout">

          <div id="w-node-_135b385e-d8f5-74c6-2f6e-7fc89557b43c-9557b436" class="w-layout-cell cell">
            <img src="{{ section.settings.image |  image_url }}" class="iconnews">
          </div>

          <div id="w-node-_135b385e-d8f5-74c6-2f6e-7fc89557b43e-9557b436" class="w-layout-cell">
            <h3 class="titlenews">{{ section.settings.title }}</h3>
            <p class="newsparagraph">{{ section.settings.description }}</p>
          </div>

        </div>
      </div>

      <div id="w-node-_135b385e-d8f5-74c6-2f6e-7fc89557b443-9557b436" class="w-layout-cell cellinputnews">
        <div class="newsform w-form">

          {% form 'customer', class: 'suscribeform-home' %}
          <div class="continputbtn">
            <input class="inputsuscribe w-input" placeholder="Escribe tu email" maxlength="256" name="contact[email]"
              value="{{ form.email }}" type="email" required>
            <input type="submit" data-wait="Enviando.." class="subscribebtn w-button" value="Suscribirme">
          </div>
          <label class="w-checkbox accept-tyc white">
            <div class="w-checkbox-input w-checkbox-input--inputType-custom termscheckbox"></div>
            <input id="checkbox-2" type="checkbox" name="checkbox-2" data-name="Checkbox 2" required=""
              style="opacity:0;position:absolute;z-index:-1"
              oninvalid="this.setCustomValidity('Marque esta casilla si desea continuar')">
            <span class="labelcheck-tyc white w-form-label" for="checkbox-2">Al suscribirte a nuestro boletín confirmas
              estár de acuerdo con nuestro <a href="/pages/aviso-de-privacidad" target="_blank"
                class="tycregister-labellink white"> Aviso de privacidad.</a></span>
          </label>
          {% endform %}

        </div>
      </div>

    </div>
  </div>
</div>

{% schema %}
{
"name": "Newsletter",
"enabled_on": {
"groups": ["footer"]
},
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Icono"
},
{
"type": "text",
"id": "title",
"label": "Título",
"default": "ÚNETE A LA COMUNIDAD brand"
},
{
"type": "text",
"id": "description",
"label": "Párrafo",
"default": "Suscríbete al boletín, conoce los nuevos lanzamientos y obtén descuentos y promociones especiales."
}
],
"presets": [
{
"name": "Newsletter"
}
]
}
{% endschema %}